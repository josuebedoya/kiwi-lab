---
import CardTeam from "@/components/atoms/cardTeam.astro";
import type {SocialItem} from "@/resources/defuaultTypes";

type Item = {
  team_id: {
    name: string;
    position: string;
    img: string;
    socialItems?: SocialItem;
    slug: string;
  }
}

interface Props {
  title?: string;
  subtitle: string;
  summary?: string;
  items?: Item [];
}
const {title, subtitle, summary, items} = Astro.props;
---

<section class="team-area team-area-v2 pb-40">
 <div class="container">
  <div class="row justify-content-center">
   <div class="col-lg-8">
    <div class="section-title text-center mb-55 wow fadeInUp">
      {title && <span class="sub-title st-one">{title}</span>}
      {subtitle && <h2>{subtitle}</h2>}
      {summary && <p>{summary}</p>}
    </div>
   </div>
  </div>
  <div class="row justify-content-center">
    {
      items?.map(({team_id: item}: Item) => (
        <CardTeam {...item}/>
      ))
    }
  </div>
 </div>
</section>