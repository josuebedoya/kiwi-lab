---
import '@/styles/components/banner.scss';
import CustomImage from "@/components/atoms/customImage.astro";

interface Props {
  title: string,
  img: string,
  videoSrc?: string,
}
const {title, img, videoSrc} = Astro.props;

const onlyText = !img && !videoSrc;
---

<section class={`page-banner bg_cover position-relative z-1 pb-150 ${onlyText ? 'only-text' : ''}`}>
 <div class="shape shape-one scene"><span data-depth="1"><img src="/assets/images/shape/shape-1.png" alt=""></span>
 </div>
 <div class="shape shape-two scene"><span data-depth="2"><img src="/assets/images/shape/shape-2.png" alt=""></span>
 </div>
 <div class="shape shape-three scene"><span data-depth="3"><img src="/assets/images/shape/shape-3.png" alt=""></span>
 </div>
 <div class="shape shape-four scene"><span data-depth="4"><img src="/assets/images/shape/shape-2.png" alt=""></span>
 </div>
 <div class="container">
  <div class="row align-items-center">
   <div class={onlyText ? "col-lg-12 text-center" : "col-lg-6"}>
    <div class="page-title">
     <h1>{title}</h1>
     <ul class="breadcrumbs-link">
      <li><a href="/">Home</a></li>
      <li>{title}</li>
     </ul>
    </div>
   </div>
    {
      !onlyText && (
        <div class="col-lg-6">
         <div class="page-banner-img">
          <CustomImage
            id={img}
            alt={title}
            width={570}
            height={425}
          />
           {
             videoSrc && (
               <div class="play-content">
                <a href={videoSrc} class="video-popup"><i class="fas fa-play"></i></a>
               </div>)
           }
         </div>
        </div>
      )
    }
  </div>
 </div>
</section>