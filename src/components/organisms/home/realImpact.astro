---
import CustomImage from "@/components/atoms/customImage.astro";
import type {Btn} from "@/resources/defuaultTypes";
import {getCustomData} from "@/server/services/getCustomData";

interface Props {
  title?: string;
  subtitle?: string;
  summary?: string;
  btn: Btn;
  img?: string;
}

const {title, subtitle, summary, btn, img} = Astro.props;
const {data: seal} = await getCustomData(["seal"]);
---

<section class="fancy-text-block light-gray-bg pb-90 fancy-text-block-v1 pt-90">
 <div class="container">
  <div class="row align-items-center">
   <div class="col-lg-6 order-2 order-lg-1">
    <div class="text-wrapper mb-40 fadeInLeft">
     <div class="section-title mb-25">
       {title && <span class="sub-title st-one">{title}</span>}
       {subtitle && <h2>{subtitle}</h2>}
     </div>
     <div set:html={summary}/>
      {
        btn && (
          <a href={btn.link} class="main-btn arrow-btn">
            {btn.label}
          </a>
        )
      }
    </div>
   </div>
   <div class="col-lg-6 order-1 order-lg-2">
    <div class="img-holder position-relative z-1 mb-40 wow fadeInRight">
     <div class="shape shape-one">
            <span>
              <CustomImage
                id={seal.seal}
                alt="Sello kiwi"
                width={160}
                height={160}
              /></span
            >
     </div>
     <div class="shape shape-two">
            <span>
              <img
                src="/assets/images/shape/shape-6.png"
                alt="About Shape"
                class="shape-yellow-green"
              /></span
            >
     </div>
     <CustomImage
       id={img}
       alt={subtitle ?? "Impacto"}
       width={470}
       height={580}
     />
    </div>
   </div>
  </div>
 </div>
</section>
