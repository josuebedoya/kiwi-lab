---
import type { Btn } from "@/resources/defuaultTypes";

interface Props {
  title?: string;
  subtitle?: string;
  summary?: string;
  btn: Btn;
}

const { title, subtitle, summary, btn } = Astro.props;
---

<section class="fancy-text-block light-gray-bg pb-90 fancy-text-block-v1 pt-90">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="text-wrapper mb-40 fadeInLeft">
          <div class="section-title mb-25">
            {title && <span class="sub-title st-one">{title}</span>}
            {subtitle && <h2>{subtitle}</h2>}
          </div>
          <div set:html={summary} />
          {
            btn && (
              <a href={btn.link} class="main-btn arrow-btn">
                {btn.label}
              </a>
            )
          }
        </div>
      </div>
      <div class="col-lg-6">
        <div class="img-holder position-relative z-1 mb-40 wow fadeInRight">
          <div class="shape shape-one">
            <span
              ><img
                src="/assets/images/shape/circle-logo-2.png"
                alt=""
                class="circle-logo"
              /></span
            >
          </div>
          <div class="shape shape-two">
            <span><img src="/assets/images/shape/shape-6.png" alt="About Shape" class="shape-yellow-green"/></span>
          </div>
          <img src="/assets/images/about/img-4.jpg" alt="" />
        </div>
      </div>
    </div>
  </div>
</section>
