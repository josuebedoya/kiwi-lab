---
import CardExperience from "@/components/atoms/cardExperience.astro";
import type {Btn} from "@/resources/defuaultTypes";
import Carousel from "@/components/species/carousel.astro";
import CardCarousel from "@/components/atoms/cardCarousel.astro";

type Item = {
  experience_id: {
    img: string;
    title: string;
    summary: string;
  };
};

interface Props {
  title?: string;
  subtitle?: string;
  summary?: string;
  items?: Item[];
  btn: Btn;
}

const {title, subtitle, summary, items, btn} = Astro.props;
---

<section class="process-area process-area-v1 pt-30 pb-20">
 <div class="container">
  <div class="row justify-content-center">
   <div class="col-lg-10">
    <div class="section-title text-center mb-55 wow fadeInUp">
      {title && <span class="sub-title st-one">{title}</span>}
      {subtitle && <h2>{subtitle}</h2>}
      {summary && <p>{summary}</p>}
    </div>
   </div>
  </div>
  <div class="row">
   <div class="col-12">
    <Carousel id="experience">
      {items?.map(({experience_id: item}: Item) => (
        <CardCarousel id="experience">
         <CardExperience {...item}/>
        </CardCarousel>
      ))}
    </Carousel>
   </div>
  </div>
  <div class="btn-partners row justify-content-center mt-60 mb-100">
    {btn && (
      <a href={btn.link} class="main-btn arrow-btn col-auto">
        {btn.label}
      </a>
    )}
  </div>
 </div>
</section>
