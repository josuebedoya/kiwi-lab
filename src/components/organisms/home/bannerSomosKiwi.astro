---
import ImgsBannerSomosKiwi from "@/components/atoms/imgsBannerSomosKiwi.astro";
import "@/styles/components/_bannerCircles.scss";

interface Props {
  img: string;
  img2: string;
  title: string;
  summary: string;
}
const { img, img2, title, summary } = Astro.props;
---

<section class="banner-circles pt-200 pb-150">
  <div class="container-md">
    <div class="row justify-content-between">
      <div class="col-xl-6">
        <div class="content">
          <div
            class="content-mobile d-flex d-xl-none justify-content-between align-items-start align-items-md-center"
          >
            <h2 class="title"><span class="light">{title}</span></h2>
            <ImgsBannerSomosKiwi img={img} img2={img2} />
          </div>
          <h2 class="title d-none d-xl-block">
            <span class="light">{title}</span>
          </h2>
          <div class="summary container" set:html={summary} />
        </div>
      </div>
      <div class="col-xl-6 d-none d-xl-block">
        <ImgsBannerSomosKiwi img={img} img2={img2} />
      </div>
    </div>
  </div>
</section>
