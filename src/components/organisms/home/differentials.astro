---
import CardDifferential from "@/components/atoms/cardDifferential.astro";

type Item = {
  title: string;
  summary: string;
};
interface Props {
  title?: string;
  subtitle?: string;
  items?: Item[];
}

const { title, subtitle, items } = Astro.props;
---

<section class="service-area service-area-v2 pt-100">
  <div class="container-1350">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="section-title text-center mb-55 wow fadeInUp">
          {title && <span class="sub-title st-one">{title}</span>}
          {subtitle && <h2>{subtitle}</h2>}
        </div>
      </div>
    </div>
    <div class="service-wrapper light-gray-bg">
      <div class="row">
        {items?.map((item: Item) => <CardDifferential {...item} />)}
      </div>
    </div>
  </div>
</section>
