---
import CardCounter from "@/components/atoms/cardCounter.astro";

type Item = {
  impact_id: {
    title: string;
    img: string;
    number: string | number;
    isPercent?: boolean;
  };
};
interface Props {
  title?: string;
  subtitle?: string;
  summary?: string;
  items?: Item[];
}

const { title, subtitle, summary, items } = Astro.props;
---

<section class="counter-area counter-area-v1 pt-100 pb-90">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="section-title text-center mb-55 wow fadeInUp">
          {title && <span class="sub-title st-one">{title}</span>}
          {subtitle && <h2>{subtitle}</h2>}
          {summary && <p>{summary}</p>}
        </div>
      </div>
    </div>
    <div class="row no-gutters">
      {items?.map((item: Item) => <CardCounter {...item?.impact_id} />)}
    </div>
  </div>
</section>
