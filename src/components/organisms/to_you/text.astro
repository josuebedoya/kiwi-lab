---
interface Props {
  title?: string;
  summary?: string;
}

const {title, summary} = Astro.props;
---

<section class="text-area pt-100 pb-130">
 <div class="container">
  <div class="row justify-content-center">
   <div class="col-lg-10">
    <div class="text-wrapper text-center wow fadeInUp" data-wow-delay="0.3s">
     <div class="title-section">
       {title && <h2 class="title">{title}</h2>}
       {summary &&
         <div set:html={summary}></div>}
     </div>
    </div>
   </div>
  </div>
 </div>
</section>