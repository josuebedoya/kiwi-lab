---
import type {ItemPost} from "@/resources/defuaultTypes";
import toLink from "@/utils/toLink.ts";
import CustomImage from "@/components/atoms/customImage.astro";
import formattedDate from "@/utils/formattedDate.ts";

interface Props extends ItemPost {
}

const {title, img, date_created, slug, category} = Astro.props;
const url = toLink(`blog/${category?.slug}/${slug}`);
---

<div class="blog-standard-post-item post-with-bg mb-60 wow fadeInUp" data-wow-delay=".35s">
 <div class="post-thumbnail">
  <CustomImage
    id={img}
    alt={title}
    width={770}
    height={510}
  />
  <div class="post-hover">
   <div class="hover-content">
    <div class="post-meta">
     <ul class="row">
      <li><span><a href={toLink(`blog/${category?.slug}`)} class="cat-link col-sm-auto">{category?.title}</a></span>
      </li>
      <li><span><i class="far fa-calendar-alt"></i><a href={url}>{formattedDate(date_created)}</a></span></li>
     </ul>
    </div>
    <h3 class="title"><a href={url}>{title}</a></h3>
    <a href={url} class="btn-link">Ver m√°s</a>
   </div>
  </div>
 </div>
</div>
