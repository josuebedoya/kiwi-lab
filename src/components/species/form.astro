---
import {PUBLIC_RECAPTCHA_SITE_KEY} from "astro:env/client";

interface Props {
  id: string;
  model: string;
  class?: string;
  api: string;
}

const {id, model, class: className, api} = Astro.props;
---

<div class="form-wrapper">
 <form
   id={id}
   class={className}
   data-form
   data-model={model}
   data-api={api}
   data-recaptcha={PUBLIC_RECAPTCHA_SITE_KEY}
 >
  <slot/>

  <div class="info-section">
   <p id="message"></p>
   <div id="loading">
    <div id="loader"></div>
   </div>
  </div>
 </form>
</div>